{% extends 'front/base.html.twig' %}

{% block title %}{{ 'login_form.head'|trans }}{% endblock %}

{% block body %}
    <div class="page-content pt-4 pb-4">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-details page-login mt-4">
                        <h1 class="h3 mb-3 font-weight-normal">
                            {{ 'login_form.head'|trans }}
                        </h1>
                        <form method="post" id="form">

                            {% include 'front/_embed/_utils/_flash_message.html.twig' %}
                            {% include 'front/_embed/_utils/_error_authenticator.html.twig' %}

                            <div class="form-group">
                                <label for="inputEmail">{{ 'login_form.your_email'|trans }}</label>
                                <input type="email"
                                       id="inputEmail"
                                       class="form-control"
                                       value="{{ last_username }}"
                                       name="email"
                                       placeholder="{{ 'login_form.placeholder.email'|trans }}"
                                       required autofocus
                                >
                            </div>

                            <div class="form-group">
                                <label for="inputPassword">{{ 'login_form.your_password'|trans }}</label>
                                <input type="password"
                                       id="inputPassword"
                                       class="form-control"
                                       name="password"
                                       placeholder="{{ 'login_form.placeholder.password'|trans }}"
                                       required
                                >
                            </div>

                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="rememberMe" name="_remember_me">
                                    <label class="custom-control-label" for="rememberMe">{{ 'login_form.remember_me'|trans }}</label>
                                </div>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="form-footer-buttons">
                                <button type="submit" class="btn btn-success">
                                    <span>{{ 'auth.login'|trans }}</span>
                                </button>
                                <a href="{{ path('main_registration') }}" class="btn btn-link btn-dark">
                                    <i class="fas fa-user"></i>
                                    <span>{{ 'auth.sing_up'|trans }}</span>
                                </a>
                            </div>

                            <div class="form-additional mt-2 pt-1">
                                <div class="row">
                                    <div class="col-sm-12 text-center">
                                        <a href="{{ path('main_forgot_password_request') }}">
                                            {{ 'auth.reset_password'|trans }}
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
