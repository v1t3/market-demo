<footer class="footer">
    <div class="footer-middle">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-12 col-md-3">
                    <h4 class="widget-title">{{ 'footer.user_links.head'|trans }}</h4>
                    <ul class="widget-list">
                        <li>
                            <a href="{{ path('main_homepage') }}">{{ 'footer.user_links.homepage'|trans }}</a>
                        </li>
                        {% if app.user is null %}
                            <li>
                                <a href="{{ path('main_login') }}">{{ 'auth.login'|trans }}</a>
                            </li>
                            <li>
                                <a href="{{ path('main_registration') }}">{{ 'auth.sing_up'|trans }}</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
                {% if app.user is not null %}
                    <div class="col-12 col-md-3">
                        <h4 class="widget-title">{{ 'footer.my_account.head'|trans }}</h4>
                        <ul class="widget-list d-flex flex-column">
                            <li>
                                <a href="{{ path('main_profile_index') }}">{{ 'footer.my_account.my_profile'|trans }}</a>
                            </li>
                            <li>
                                <a href="{{ path('main_cart_show') }}">{{ 'footer.my_account.view_cart'|trans }}</a>
                            </li>
                            <li>
                                <a href="{{ path('main_logout') }}">{{ 'auth.logout'|trans }}</a>
                            </li>
                        </ul>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</footer>
